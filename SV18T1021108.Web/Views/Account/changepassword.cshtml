@model SV18T1021108.Web.Models.AccountPaginationResultModel
@{
    ViewBag.Title = "Đổi mật khẩu";
}

<div class="container">
    <div class="row vertical-offset-100">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>@Model.UserName</h3>
                </div>
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form" action="~/account/ChangePassword" method="post">
                        @Html.HiddenFor(m => m.UserName)
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Nhập mật khẩu Cũ" name="PasswordOld" type="password" value="@Model.PasswordOld">
                                @Html.ValidationMessage("PasswordOld", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Nhập mật khẩu" name="password" type="password" value="@Model.Password">
                                @Html.ValidationMessage("password", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Nhập lại mật khẩu" name="passwordAgain" type="password" value="@Model.PasswordAgain">
                                @Html.ValidationMessage("passwordAgain", new { @class = "text-danger" })
                            </div>
                            <div class="col-xs-8" style="color:red">
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10 text-danger">
                                        @Html.ValidationSummary()
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-4 col-sm-10">
                                <button type="submit" class="btn btn-primary">
                                    Đổi mật khẩu
                                </button>
                                <a href="~/" class="btn btn-warning">
                                    Trở về
                                </a>

                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>