@model SV18T1021108.DomainModel.Employee
@{
    ViewBag.Title = "Xoá nhân viên";
}

<div class="box box-danger">
    <form class="form-horizontal" action="~/employee/delete/@Model.EmployeeID" method="post">

        <div class="box-body">
            <div class="box-header with-border">
                <div class="form-group">
                    <label class="control-label col-sm-2">Tên:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.FirstName</p>
                    </div>
                </div>
            </div>
            <div class="box-header with-border">
                <div class="form-group">
                    <label class="control-label col-sm-2">Họ:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.LastName </p>
                    </div>
                </div>
            </div>
            <div class="box-header with-border">
                <div class="form-group">
                    <label class="control-label col-sm-2">Ngày sinh:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.BirthDate</p>
                    </div>
                </div>
            </div>
            <div class="box-header with-border">
                <div class="form-group">
                    <label class="control-label col-sm-2">Chú thích:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Notes</p>
                    </div>
                </div>
            </div>
            <div class="box-header with-border">
                <div class="form-group">
                    <label class="control-label col-sm-2">Email:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Email</p>
                    </div>
                </div>
            </div>
            <div class="box-header with-border">
                <div class="form-group">
                    <label class="control-label col-sm-2">Ảnh:</label>
                    <div class="col-sm-10">
                        <img src="@Model.Photo" style="width:120px"/>
                    </div>
                </div>
            </div>
            <div class="box-header with-border">

            </div>
        </div>
        <div class="box-footer">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV18T1021108.BusinessLayer.CommonDataService.InUsedEmployee(Model.EmployeeID))
                    {
                <p class="text-danger"> Không được xóa nhân viên</p> }
            else
            {
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-remove"></i> Đồng ý xóa
                </button>}

                    <a class="btn btn-warning" href="~/employee">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

