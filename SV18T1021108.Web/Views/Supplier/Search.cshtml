@model SV18T1021108.Web.Models.SupplierPaginationResultModel
@{
    Layout = null;
}

<div>
    <p style="margin-top:10px">
        Có <strong>@Model.RowCount</strong> nhà cung cấp trong tổng số <strong>@Model.PageCount</strong> trang.
    </p>

</div>
<div class="table-responsive" style="margin-top:10px">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th>Tên nhà cung cấp </th>
                <th>Tên giao dịch</th>
                <th>Địa chỉ</th>
                <th>Quốc gia</th>
                <th>Thành phố</th>
                <th>Số điện thoại </th>
                <th>Mã bưu chính</th>
                <th style="width:100px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.SupplierName</td>
                    <td>@item.ContactName</td>
                    <td>@item.Address</td>
                    <td>@item.Country</td>
                    <td>@item.City</td>
                    <td>@item.Phone</td>
                    <td>@item.PostalCode</td>
                    <td>
                        <form action="~/product" method="get">
                            <a href="~/supplier/edit/@item.SupplierID" class="btn btn-xs btn-success">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/supplier/delete/@item.SupplierID" class="btn btn-xs btn-danger">
                                <i class="fa fa-remove"></i>
                            </a>

                            <button name="SupplierID" type="submit" value="@item.SupplierID" class="btn btn-xs btn-info"><i class="glyphicon glyphicon-arrow-right"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div class="text-center">
    @if (Model.PageCount > 1)
    {
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="~/Supplier?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                }
            }
            @*<li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>*@
        </ul>
    }
    </div>