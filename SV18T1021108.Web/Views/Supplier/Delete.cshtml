@model SV18T1021108.DomainModel.Supplier
@{
    ViewBag.Title = "Xoá nhà cung cấp";
}
<div class="box box-danger">
    <form class="form-horizontal" action="~/supplier/delete/@Model.SupplierID" method="post">

        <div class="box-body">
            <div class="box-header with-border">
                <div class="form-group">
                    <label class="control-label col-sm-2">Tên nhà cung cấp:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.SupplierName</p>
                    </div>
                </div>
            </div>
            <div class="box-header with-border">
                <div class="form-group">
                    <label class="control-label col-sm-2">Tên giao dịch:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.ContactName</p>
                    </div>
                </div>
            </div>
            <div class="box-header with-border">
                <div class="form-group">
                    <label class="control-label col-sm-2">Địa chỉ:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Address</p>
                    </div>
                </div>
            </div>
            <div class="box-header with-border">
                <div class="form-group">
                    <label class="control-label col-sm-2">Quốc gia:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Country</p>
                    </div>
                </div>
            </div>
            <div class="box-header with-border">
                <div class="form-group">
                    <label class="control-label col-sm-2">Thành Phố:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.City</p>
                    </div>
                </div>
            </div>
            <div class="box-header with-border">

                <div class="form-group">
                    <label class="control-label col-sm-2">Số Điện thoại:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Phone</p>
                    </div>
                </div>
            </div>
            <div class="box-header with-border">
                <div class="form-group">
                    <label class="control-label col-sm-2">Mã bưu chính:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.PostalCode</p>
                    </div>
                </div>
            </div>



        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                @if (SV18T1021108.BusinessLayer.CommonDataService.InUsedSupplier(Model.SupplierID))
                {
                    <p class="text-danger"> Không được xóa khách hàng</p> }
                else
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-remove"></i> Đồng ý xóa
                    </button>}

                <a class="btn btn-warning" href="~/supplier">
                    <i class="fa fa-ban"></i> Quay lại
                </a>

            </div>
        </div>
    </form>
</div>

