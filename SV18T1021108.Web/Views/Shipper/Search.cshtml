@model SV18T1021108.Web.Models.ShipperPaginationResultModel
@{
    Layout = null;
}

<div>
    <p style="margin-top:10px">
        Có <strong>@Model.RowCount</strong> người giao hàng trong tổng số <strong>@Model.PageCount</strong> trang.
    </p>


</div>
<div class="table-responsive" style="margin-top:10px">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th>Tên người giao hàng </th>
                <th>Số điện thoại </th>
                <th style="width:70px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.ShipperName</td>
                    <td>@item.Phone</td>
                    <td>
                        <a href="~/shipper/edit/@item.ShipperID" class="btn btn-xs btn-success">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/shipper/delete/@item.ShipperID" class="btn btn-xs btn-danger">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
}
        </tbody>
    </table>

</div>
<div class="text-center">
    @if (Model.PageCount > 1)
    {
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="~/shipper?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                }
            }
            @*<li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>*@
        </ul>
    }
    </div>