@model SV18T1021108.DomainModel.Shipper
@{

}
<div class="box box-primary">

    <form class="form-horizontal" action="~/Shipper/save" method="post">
        @Html.HiddenFor(m => m.ShipperID)
        <div class="box-body">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên người giao hàng<small class="text-danger"> * </small>:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.ShipperName, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại<small class="text-danger"> * </small>:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 text-danger">
                    @Html.ValidationSummary()
                </div>
            </div>
        </div>
        <div class="box-footer">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a href="~/shipper" class="btn btn-warning">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>

                </div>
            </div>
        </div>
    </form>
</div>