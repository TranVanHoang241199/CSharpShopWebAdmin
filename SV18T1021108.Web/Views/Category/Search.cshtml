@model SV18T1021108.Web.Models.CategoryPaginationResultModel
@{
    Layout = null;
}

<div>
    <p style="margin-top:10px">
        Có <strong>@Model.RowCount</strong> loại hàng trong tổng số <strong>@Model.PageCount</strong> trang.
    </p>

</div>
<div class="table-responsive" style="margin-top:10px">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th>Tên loại hàng</th>
                <th>Mô tả</th>
                <th style="width:100px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>
                        <form action="~/product" method="get">
                            <a href="~/category/edit/@item.CategoryID" class="btn btn-xs btn-success">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/category/delete/@item.CategoryID" class="btn btn-xs btn-danger">
                                <i class="fa fa-remove"></i>
                            </a>

                            <button name="CategoryID" type="submit" value="@item.CategoryID" class="btn btn-xs btn-info"><i class="glyphicon glyphicon-arrow-right"></i></button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>
<div class="text-center">
    @if (Model.PageCount > 1)
    {
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="~/category?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                }
            }
            @*<li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>*@
        </ul>
    }
    </div>